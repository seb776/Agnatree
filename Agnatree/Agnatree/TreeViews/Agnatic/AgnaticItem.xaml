             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="Auto" Height="Auto">
    <Grid x:Name="GridItem" Width="Auto" Height="Auto">
        <Label x:Name="NodeContent" Width="Auto" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">Node</Label>
        <Label x:Name="NodeContent1" Width="Auto" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">Node</Label>
        <Label x:Name="NodeContent2" Width="Auto" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">Node</Label>
        <Polygon Points="0,50 120,200 160,175 50,0" Stroke="Gray" Fill="White" Opacity="0.5" StrokeThickness="1" x:Name="Polys" MouseLeftButtonDown="Polys_MouseLeftButtonDown"/>
