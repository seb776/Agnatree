<UserControl x:Class="Agnatree.TreeViews.Agnatic.AgnaticItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock IsEnabled="True" Foreground="Black" Margin="74,53,-74,-53">
            salut
            <TextBlock.RenderTransform>
                <RotateTransform  x:Name="Text" Angle="{Binding}"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Polygon Points="0,100, 200,200 100, 100" Fill="Black" x:Name="Polys"/>
    </Grid>
</UserControl>
