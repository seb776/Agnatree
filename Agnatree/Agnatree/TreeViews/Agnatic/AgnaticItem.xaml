<UserControl x:Class="Agnatree.TreeViews.Agnatic.AgnaticItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Polygon Points="0,50 120,200 160,175 50,0" Stroke="Gray" Fill="White" StrokeThickness="1" x:Name="Polys" MouseLeftButtonDown="Polys_MouseLeftButtonDown"/>
        <TextBlock IsEnabled="True" Foreground="BlueViolet" Margin="0,0,192,286">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <RotateTransform  x:Name="Text" Angle="{Binding}"/>
                    <TranslateTransform x:Name="TextPos"/>
                </TransformGroup>
            </TextBlock.RenderTransform><Run Text="salut"/></TextBlock>
    </Grid>
</UserControl>
